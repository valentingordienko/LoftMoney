<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="TransactionInputs">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/TransactionInputHorizontalMargin</item>
        <item name="android:layout_marginEnd">@dimen/TransactionInputHorizontalMargin</item>
        <item name="android:textSize">@dimen/TransactionInputTextSize</item>
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <style name="TransactionListItemTextEdit">
        <item name="android:textSize">@dimen/TransactionListItemTextSize</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

</resources>
